
<div class="container mt-2">
	<div class="row justify-content-center align-items-center text-center p-2">
		<div class="m-1 col-sm-8 col-md-6 col-lg-4 shadow-sm p-3 mb-5  border rounded ">
			<div class="pt-1  pb-3 ">
				<img class="rounded mx-auto d-block"
					src="https://freelogovector.net/wp-content/uploads/logo-images-13/microsoft-cortana-logo-vector-73233.png"
					alt="" width=70px height=70px>
				<p class="text-center text-uppercase mt-1">Edit Coupon</p>
				<form class="form text-center" action="/admin/editcoupon" method="POST">
				
					<div class="form-group input-group-md mb-3">
						<input type="hidden" class="form-control" name="_id" value="<%=coupondata._id%>">
						<input type="text" class="form-control" name="couponName"value="<%=coupondata.couponName%>"
							placeholder="Coupon Name">
						
					</div>
					<div class="form-group input-group-md mb-3">
						<input type="text" class="form-control" name="couponCode"value="<%=coupondata.couponCode%>" placeholder="Coupon Code">
						
					</div>
					<div class="form-group input-group-md mb-3">
						<input type="number" class="form-control" name="discountValue"value="<%=coupondata.minPurchase%>" placeholder="Discount Value">
						
					</div>
					<div class="form-group input-group-md mb-3">
						<input type="number" class="form-control" name="maxDiscount"value="<%=coupondata.maxDiscount%>" placeholder="Max Discount">
						
					</div>
					<div class="form-group input-group-md mb-3">
						<input type="number" class="form-control" name="limit"value="<%=coupondata.limit%>" placeholder="Enter Limit">
						
					</div>
					
					<div class="form-group input-group-md mb-3">
						<input type="number" class="form-control" name="minPurchase"value="<%=coupondata.minPurchase%>" placeholder="Minimun Purchase Amonut">
						
					</div>
					<div class="form-group input-group-md mb-3">
						<input type="date" class="form-control" name="expireDate" id="expireDateInput" value="2023-07-31" placeholder="Expire date">
						
						<script>
							let date = '<%=coupondata.expireDate%>';
							let upDate = new Date(date);
							let year = upDate.getFullYear();
							let month = String(upDate.getMonth() + 1).padStart(2, '0');
							let day = String(upDate.getDate()).padStart(2, '0');
							let formattedDate = `${year}-${month}-${day}`;
							document.getElementById("expireDateInput").value = formattedDate;
							document.getElementById("coupon").textContent = formattedDate;
						</script>
						
					</div>
					<button class="btn btn-block btn-primary mt-4" type="submit">
						EDIT COUPON
					</button>
				</form>
			</div>
		</div>
	</div>
</div>