<section class="container">
    <div class="row border pb-2 mt-5 justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center">ADD NEW ADDRESS</h2>
        <form class="border p-2" action="/editaddress" method="post" style="background-color: rgb(207, 219, 225);">
       
            
       
            <div class="form-group">
            <label for="inputAddress">Name</label>
            <input type="hidden" class="form-control" name="id" id="inputAddress" placeholder="Enter name" value="<%=address._id%>">
            <input type="text" class="form-control" name="name" id="inputAddress" placeholder="Enter name" value="<%=address.name%>">
          </div>
          <div class="form-group">
            <label for="inputAddress">Mobile</label>
            <input type="number" class="form-control" name="mob" id="inputAddress" placeholder="Mobile" value="<%=address.mob %>">
          </div>
          <div class="form-group">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" name="address" id="inputAddress" placeholder="Enter Address"value="<%=address.address  %>">
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputCity">Country</label>
              <input type="text" name="country" class="form-control" id="inputCity" value="<%=address.country  %>">
            </div>
            <div class="form-group col-md-6">
              <label for="inputState">State</label>
              <input type="text" name="state" class="form-control" id="inputState" value="<%=address.state %>">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputCity">City</label>
              <input type="text" name="city" class="form-control" id="inputCity" value="<%=address.city %>">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPin">Pin</label>
              <input type="text" name="pin" class="form-control" id="inputPin" value="<%=address.pin%>">
              <br>
            </div>
          </div>
     

          <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Save changes</button>
          </div>
        </form>
      </div>
    </div>
    
  </section>
  