<div class="col-12">
    <div class="bg-light rounded h-100 mt-5 p-4">
        <h6 class="mb-4 text-center h2 " style="font-weight: 900;">Order History</h6>
        <div class="table-responsive">
            <table class="table  table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">OrderId</th>
                        <th scope="col">Date</th>
                        <th scope="col">Payment method</th>
                        <th scope="col">Status</th>
                        <th scope="col">Total amount</th>
                        <th scope="col">view details</th>
                      
                    </tr>
                </thead>
                <tbody>
                    <%orderdata.forEach(order => {%>
                    <tr>

                        <td><%=order._id%></td>
                        <td><%=order.date.toLocaleString()%></td>
                        <td><%=order.paymentType%></td>
                        <td><%=order.orderStatus%></td>
                        <td><%=order.totalAmount%></td>
                        <td><a href="/orderDetails/?id=<%=order._id%>"><button class="btn btn-success">View Details</button></a></td>
                          
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>